{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "turbo": "^1.5.6"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build"
  }
}
